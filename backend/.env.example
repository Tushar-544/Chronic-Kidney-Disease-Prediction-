# Kidney Disease Classification API - Environment Variables
# Copy this file to .env and update the values

# API Configuration
APP_NAME="Kidney Disease Classification API"
VERSION="1.0.0"
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Model Configuration
MODEL_DIR=models
MODEL_PATH=models/model_weights.pth
CLASS_NAMES_PATH=models/class_names.json

# Device Configuration (cuda or cpu)
DEVICE=cuda

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_BATCH_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# Security (Optional)
API_KEY_ENABLED=False
API_KEY=your-secret-api-key-here
